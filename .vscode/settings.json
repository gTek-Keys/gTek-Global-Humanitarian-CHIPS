{
  "gitlens.views.repositories.files.layout": "tree",
  "gitlens.views.repositories.files.compact": false,
  "gitlens.views.repositories.showBranchComparison": "working",
  "gitlens.views.repositories.showUpstreamStatus": true,
  "gitlens.views.repositories.branches.layout": "tree",
  "gitlens.views.repositories.branches.showBranchComparison": "branch",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.compare.enabled": true,
  "gitlens.views.search.enabled": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.authors.enabled": true,
  "gitlens.codeLens.recentChange.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.blame.heatmap.enabled": true,
  "gitlens.blame.avatars": true,
  "gitlens.statusBar.enabled": true,
  "gitlens.statusBar.pullRequests.enabled": true,
  
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "$(capture).js, $(capture).d.ts.map, $(capture).d.ts, $(capture).js.map",
    "*.tsx": "$(capture).js, $(capture).jsx",
    "*.env": "$(capture).env.*, .env.*",
    "Dockerfile": "Dockerfile.*, docker-compose.*, .dockerignore",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "README.md": "*.md",
    "tsconfig.json": "tsconfig.*.json"
  },
  
  "files.associations": {
    "*.sql": "sql",
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "Dockerfile*": "dockerfile",
    ".env*": "dotenv",
    "gtek-*": "yaml"
  },
  
  "git.decorations.enabled": true,
  "git.timeline.enabled": true,
  "git.timeline.date": "authored",
  "git.timeline.showUncommitted": true,
  
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always",
  
  "editor.rulers": [80, 120],
  "editor.renderWhitespace": "boundary",
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Monaco, 'Courier New', monospace",
  
  "security.workspace.trust.untrustedFiles": "open",
  
  "extensions.ignoreRecommendations": false
}